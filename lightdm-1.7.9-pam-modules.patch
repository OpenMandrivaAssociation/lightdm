diff -up ./data/pam/lightdm.pamfix ./data/pam/lightdm
--- ./data/pam/lightdm.pamfix	2013-04-23 23:07:19.000000000 +0000
+++ ./data/pam/lightdm	2013-06-05 16:33:15.256692624 +0000
@@ -7,14 +7,30 @@ auth      required pam_nologin.so
 auth      required pam_env.so
 
 # Use /etc/passwd and /etc/shadow for passwords
-auth      required pam_unix.so
+# and allow empty password
+auth      required pam_unix.so nullok
+
+# Gnome Keyring's PAM support
+auth      optional pam_gnome_keyring.so
 
 # Check account is active, change password if required
 account   required pam_unix.so
 
 # Allow password to be changed
-password  required pam_unix.so
+password  required pam_unix.so nullok
 
 # Setup session
 session   required pam_unix.so
-session   optional pam_systemd.so
+session   required pam_loginuid.so
+
+# To set ACLs correctly with systemd
+session   required pam_systemd.so
+
+# To get apps needing consolehelper working
+session   optional pam_console.so
+
+# Gnome Keyring's PAM support
+session   optional pam_gnome_keyring.so auto_start
+
+# To enable tmpfs for xguest account (mga#4950)
+session   required pam_namespace.so
